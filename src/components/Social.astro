---
const { platform, username } = Astro.props as {
  platform: "linkedin" | "github" | "instagram";
  username: string;
};

const logos = {
  linkedin: "/linkedin-logo.svg",
  github: "/github-logo.svg",
  instagram: "/instagram-logo.svg",
};

const logo = logos[platform.toLowerCase() as keyof typeof logos];
---

<a
  href={`https://www.${platform}.com/${username}`}
  target="_blank"
  rel="noopener noreferrer"
>
  <img src={logo} alt={`${platform} logo`} />
</a>

<style>
  a {
    padding: 0.5rem;
    display: inline-block;
  }
  img {
    width: 48px;
    height: 48px;
  }
</style>
